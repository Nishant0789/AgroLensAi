{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "latitude": {
          "type": "number",
          "description": "The user's last known latitude."
        },
        "longitude": {
          "type": "number",
          "description": "The user's last known longitude."
        },
        "city": {
            "type": "string",
            "description": "The user's city."
        },
        "country": {
            "type": "string",
            "description": "The user's country."
        },
        "currentCrop": {
          "type": "string",
          "description": "The crop the user is currently growing."
        }
      },
      "required": ["uid", "email"]
    },
    "DiseaseAlert": {
      "title": "Disease Alert",
      "description": "Represents a detected disease outbreak.",
      "type": "object",
      "properties": {
        "disease": {
          "type": "string"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "sourceUserId": {
          "type": "string"
        }
      },
      "required": ["disease", "latitude", "longitude", "timestamp"]
    },
    "UserNotification": {
      "title": "User Notification",
      "description": "A notification for a specific user about a nearby disease alert.",
      "type": "object",
      "properties": {
        "alertId": {
          "type": "string"
        },
        "disease": {
          "type": "string"
        },
        "distance": {
          "type": "number"
        },
        "preventiveMeasures": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "read": {
          "type": "boolean"
        }
      },
      "required": ["alertId", "disease", "distance", "preventiveMeasures", "timestamp"]
    },
    "Scan": {
      "title": "Crop Scan",
      "description": "Represents a single crop scan performed by a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who performed the scan."
        },
        "imageUrl": {
          "type": "string",
          "description": "A data URI of the scanned image."
        },
        "disease": {
          "type": "string",
          "description": "The diagnosed disease."
        },
        "solution": {
          "type": "string",
          "description": "The suggested solution."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the scan was created."
        }
      },
      "required": ["userId", "imageUrl", "disease", "solution", "createdAt"]
    }
  },
  "auth": {
    "providers": ["anonymous", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/alerts/{alertId}": {
      "schema": {
        "$ref": "#/entities/DiseaseAlert"
      },
      "description": "Stores records of detected disease outbreaks."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": {
        "$ref": "#/entities/UserNotification"
      },
      "description": "Stores personalized notifications for each user."
    },
    "/users/{userId}/scans/{scanId}": {
      "schema": {
        "$ref": "#/entities/Scan"
      },
      "description": "Stores a user's crop scan history."
    }
  }
}
