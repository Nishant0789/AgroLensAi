{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "description": "URL of the user's profile picture."
        },
        "latitude": {
          "type": "number",
          "description": "The user's last known latitude."
        },
        "longitude": {
          "type": "number",
          "description": "The user's last known longitude."
        },
        "city": {
          "type": "string",
          "description": "The user's city."
        },
        "country": {
          "type": "string",
          "description": "The user's country."
        }
      },
      "required": ["uid"]
    },
    "Field": {
      "title": "Farm Field",
      "description": "Represents a single field owned by a user.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "crop": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "name", "crop", "createdAt"]
    },
    "FarmingTask": {
      "title": "Farming Task",
      "description": "A specific task to be performed in a field on a certain date.",
      "type": "object",
      "properties": {
        "fieldId": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "category": {
          "type": "string",
          "enum": ["Watering", "Fertilizing", "Pest Control", "Planting", "Harvesting", "Other"]
        },
        "completed": {
          "type": "boolean"
        }
      },
      "required": ["fieldId", "title", "date", "category"]
    },
    "DiseaseAlert": {
      "title": "Disease Alert",
      "description": "Represents a detected disease outbreak.",
      "type": "object",
      "properties": {
        "disease": {
          "type": "string"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "sourceUserId": {
          "type": "string"
        }
      },
      "required": ["disease", "latitude", "longitude", "timestamp"]
    },
    "UserNotification": {
      "title": "User Notification",
      "description": "A notification for a specific user about a nearby disease alert.",
      "type": "object",
      "properties": {
        "alertId": {
          "type": "string"
        },
        "disease": {
          "type": "string"
        },
        "distance": {
          "type": "number"
        },
        "preventiveMeasures": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "read": {
          "type": "boolean"
        }
      },
      "required": ["alertId", "disease", "distance", "preventiveMeasures", "timestamp"]
    },
    "Scan": {
      "title": "Crop Scan",
      "description": "Represents a single crop scan performed by a user, including the full analysis.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user who performed the scan."
        },
        "imageUrl": {
          "type": "string",
          "description": "A data URI of the scanned image."
        },
        "disease": {
          "type": "string",
          "description": "The diagnosed disease (e.g., 'Healthy', 'Rust')."
        },
        "description": {
          "type": "string",
          "description": "A general overview of the disease."
        },
        "symptoms": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of key symptoms to look for."
        },
        "organicSolution": {
          "type": "string",
          "description": "Detailed step-by-step organic or natural solutions."
        },
        "chemicalSolution": {
          "type": "string",
          "description": "Detailed step-by-step chemical-based solutions."
        },
        "prevention": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of actionable steps to prevent this disease."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the scan was created."
        }
      },
      "required": ["userId", "imageUrl", "disease", "createdAt"]
    }
  },
  "auth": {
    "providers": ["phone", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/fields/{fieldId}": {
      "schema": {
        "$ref": "#/entities/Field"
      },
      "description": "Stores the fields owned by a user."
    },
    "/users/{userId}/tasks/{taskId}": {
      "schema": {
        "$ref": "#/entities/FarmingTask"
      },
      "description": "Stores the farming tasks for a user."
    },
    "/alerts/{alertId}": {
      "schema": {
        "$ref": "#/entities/DiseaseAlert"
      },
      "description": "Stores records of detected disease outbreaks."
    },
    "/users/{userId}/notifications/{notificationId}": {
      "schema": {
        "$ref": "#/entities/UserNotification"
      },
      "description": "Stores personalized notifications for each user."
    },
    "/users/{userId}/scans/{scanId}": {
      "schema": {
        "$ref": "#/entities/Scan"
      },
      "description": "Stores a user's crop scan history."
    }
  }
}
