rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read and write to their own profile, but not others'
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Any authenticated user can create an alert
    match /alerts/{alertId} {
      allow create: if isAuthenticated();
      // Only authenticated users can read alerts
      allow read: if isAuthenticated();
      // Alerts are immutable
      allow update, delete: if false;
    }

    // Users can only access their own notifications
    match /users/{userId}/notifications/{notificationId} {
      allow read, write, create, delete: if isAuthenticated() && isOwner(userId);
    }

    // Users can manage their own scan history
    match /users/{userId}/scans/{scanId} {
      allow read, create, delete: if isAuthenticated() && isOwner(userId);
      // Scans are immutable once created
      allow update: if false;
    }
  }
}
